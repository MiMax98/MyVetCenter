@model IEnumerable<VetCenter.Models.Pet>

<h1>Zwierzęta</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var pet in Model) {
        <tr>
            <td>
                @pet.Name
            </td>
            <td>
                @pet.Species
            </td>
            <td>
                @pet.Breed
            </td>
            <td>
                @pet.BirthDate.ToShortDateString()
            </td>
            <td>
                <a asp-action="Details" asp-controller="Owners" asp-route-id="@pet.OwnerId">@pet.Owner.FirstName @pet.Owner.LastName</a>
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id=pet.PetId }) |
                @Html.ActionLink("Szczegóły", "Details", new { id=pet.PetId }) |
                @Html.ActionLink("Usuń", "DeletePet", new { id=pet.PetId})
            </td>
        </tr>
}
    </tbody>
</table>
